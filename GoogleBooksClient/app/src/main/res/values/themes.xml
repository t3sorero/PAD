<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema base con ActionBar para modo claro -->
    <style name="Base.Theme.GoogleBooksClient" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
        <item name="colorAccent">@color/blue_300</item>

        <!-- Fondo y superficie - ACTUALIZADO -->
        <item name="android:windowBackground">@color/neutral_offwhite</item>
        <item name="android:colorBackground">@color/neutral_offwhite</item>

        <!-- Color de fondo para CardViews - ACTUALIZADO -->
        <item name="cardBackgroundColor">@color/neutral_light_gray</item>

        <!-- Textos -->
        <item name="android:textColorPrimary">@color/neutral_almost_black</item>
        <item name="android:textColorSecondary">@color/gray_500</item>
        <item name="android:textColorHint">@color/gray_400</item>

        <!-- EditText -->
        <item name="editTextStyle">@style/Widget.App.EditText</item>

        <!-- Botones -->
        <item name="buttonStyle">@style/Widget.App.Button</item>

        <!-- RadioButtons -->
        <item name="radioButtonStyle">@style/Widget.App.RadioButton</item>

        <!-- ActionBar -->
        <item name="actionBarStyle">@style/Widget.App.ActionBar</item>
    </style>

    <!-- Tema principal -->
    <style name="Theme.GoogleBooksClient" parent="Base.Theme.GoogleBooksClient" />

    <!-- Tema sin ActionBar para MainActivity -->
    <style name="Theme.GoogleBooksClient.NoActionBar" parent="Base.Theme.GoogleBooksClient">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Estilo para EditText -->
    <style name="Widget.App.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/neutral_almost_black</item>
        <item name="android:textColorHint">@color/gray_400</item>
        <item name="backgroundTint">@color/blue_500</item>
    </style>

    <!-- Estilo para Button -->
    <style name="Widget.App.Button" parent="Widget.AppCompat.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/neutral_white</item>
        <item name="android:background">@color/blue_500</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Estilo para RadioButton -->
    <style name="Widget.App.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/neutral_almost_black</item>
        <item name="buttonTint">@color/blue_500</item>
    </style>

    <!-- Estilo para ActionBar -->
    <style name="Widget.App.ActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/blue_500</item>
        <item name="titleTextStyle">@style/TextAppearance.App.ActionBar.Title</item>
        <item name="elevation">4dp</item>
    </style>

    <!-- TÃ­tulo de ActionBar -->
    <style name="TextAppearance.App.ActionBar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/neutral_white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilos para CardView - ACTUALIZADO -->
    <style name="Widget.App.CardView" parent="CardView">
        <item name="cardBackgroundColor">@color/neutral_light_gray</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <!-- Textos de los libros -->
    <style name="TextAppearance.App.BookTitle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/neutral_almost_black</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextAppearance.App.BookAuthor" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextAppearance.App.BookLink" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/blue_500</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>